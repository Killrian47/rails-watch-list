<h1 class="text-center my-3"><%= @movie.title %></h1>

<div class="container w-50">
  <%= simple_form_for [@movie, @comment] do |f| %>
      <%= f.input :content %>
      <%= f.submit "Comment this movie", class: "btn btn-primary" %>
  <% end %>
    
  <h3 class="mt-3">Commentaires :</h3>
  <% @movie.comments.each do |comment| %>
    <p><%= comment.content %></p>
  <% end %>
</div>