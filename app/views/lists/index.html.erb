<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8bW92aWV8ZW58MHx8MHx8fDA%3D);">
  <div class="container">
    <h1>Watch List Rails !</h1>
    <p>Put comments on your watched movies</p>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h2 class="my-3">All your lists</h2>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-success rounded" %>
  </div>

  <div class="container">
    <div class="row">
      <% @lists.each do |list| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card mb-3 shadow">
          <%= link_to list_path(list), class: "nav-link link-on-card" do %>
          <% if list.photo.attached? %>
            <%= cl_image_tag list.photo.key, class: "img-index" %>
          <% else %>
            <img class="img-index" src="https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8bW92aWV8ZW58MHx8MHx8fDA%3D" alt="" >
          <% end %>
            <div class="card-body">
              <p class="mb-0">List name : <strong><%= list.name %></strong></p>
            </div>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

